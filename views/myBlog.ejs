<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('./partials/head') %>
        <title>Blog</title>
</head>

<body>
    <%- include('./partials/nav') %>

        <div class="container mt-4">
            <div class="row row-cols-3 mb-3">
                <% blogs.forEach(blog=> { %>
                    <div class="col">
                        <div class="card col" style="width: 18rem">
                            <img src="<%= blog.coverImageURL %>" class="object-fit-cover card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= blog.title %>
                                </h5>
                                <div style="display: flex; justify-content: space-evenly;">
                                    <form action="/blog/<%= blog._id %>" method="get">
                                        <button type="submit" class="btn btn-sm btn-secondary">View</button>
                                    </form>
                                    <form action="/blog/edit/<%= blog._id %>" method="post">
                                        <button type="submit" class="btn btn-sm btn-secondary">Edit</button>
                                    </form>

                                    <form action="/blog/delete/<%= blog._id %>" method="post">
                                        <button type="submit" class="btn btn-sm btn-secondary">Delete</button>
                                    </form>
                                </div>

                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('./partials/scripts') %>
</body>

</html>